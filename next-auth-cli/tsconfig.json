{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",    
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,    
    "emitDeclarationOnly": true,
    "declarationDir": "types" 
  },
  "include": ["index.js"], 
}
